---
import '@fontsource/inter';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Global Nexus Institute - Connect with future tech leaders" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Global Nexus Institute</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="fixed top-0 w-full bg-white shadow-md z-50">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-3">
            <img src="https://i.ibb.co/VvC0vpN/logo.png" alt="Global Nexus Institute Logo" class="h-12 w-auto" />
            <span class="text-2xl font-bold text-primary">Global Nexus Institute</span>
          </a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-primary">Home</a>
            <a href="/about" class="text-gray-700 hover:text-primary">About Us</a>
            <a href="/programs" class="text-gray-700 hover:text-primary">Programs</a>
            <a href="/admissions" class="text-gray-700 hover:text-primary">Admissions</a>
            <a href="/research" class="text-gray-700 hover:text-primary">Research</a>
            <a href="/news" class="text-gray-700 hover:text-primary">News</a>
            <a href="/contact" class="text-gray-700 hover:text-primary">Contact</a>
          </div>
          <button class="md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <div class="flex items-center space-x-3 mb-4">
              <img src="https://i.ibb.co/VvC0vpN/logo.png" alt="Global Nexus Institute Logo" class="h-12 w-auto bg-white rounded-lg p-1" />
              <div>
                <h3 class="text-xl font-bold">Global Nexus Institute</h3>
                <p class="text-sm text-gray-400">Connect with future tech leaders</p>
              </div>
            </div>
            <div class="space-y-2 text-gray-400">
              <p>Earn international certifications</p>
              <p>Master key tech skills of 21st Century</p>
            </div>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/programs" class="text-gray-400 hover:text-white">Programs</a></li>
              <li><a href="/admissions" class="text-gray-400 hover:text-white">Admissions</a></li>
              <li><a href="/research" class="text-gray-400 hover:text-white">Research</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-white">Contact</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Contact</h4>
            <ul class="space-y-2 text-gray-400">
              <li>Kigali, Rwanda</li>
              <li>Norrsken House</li>
              <li>info@globalnexus.co.rw</li>
              <li>+250787406140</li>
            </ul>
          </div>
          <div>
            <h4 class="text-lg font-semibold mb-4">Follow Us</h4>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-400 hover:text-white">
                <span class="sr-only">Facebook</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white">
                <span class="sr-only">LinkedIn</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-white">
                <span class="sr-only">Twitter</span>
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
              </a>
            </div>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Global Nexus Institute. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>